<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPlanFragment">


    <cz.mendelu.xpaseka.bodybeat.view.TextInputView
        android:id="@+id/workoutPlanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="Workout title"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/timers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/workoutPlanTitle">

        <LinearLayout
            android:id="@+id/exerciseTimerBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/workoutPlanTitle"
            app:layout_constraintEnd_toStartOf="@id/seriesTimerBlock">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextHeader"
                android:textAlignment="center"
                android:text="Exercise timer"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exerciseTimerButton"
                android:layout_width="140dp"
                style="@style/EditButton"
                android:text="0:00"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seriesTimerBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/workoutPlanTitle"
            app:layout_constraintStart_toEndOf="@id/exerciseTimerBlock">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextHeader"
                android:textAlignment="center"
                android:text="Series timer"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seriesTimerButton"
                android:layout_width="140dp"
                style="@style/EditButton"
                android:text="0:00"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/scheduleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SpacerLabelText"
        style="@style/SpacerLabel"
        app:layout_constraintTop_toBottomOf="@id/timers"
        android:text="Schedule"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/manageExercisesButton"
        android:layout_width="270dp"
        android:text="Manage exercises"
        style="@style/EditButton"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/scheduleLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSavePlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>